@model IEnumerable<WebAppTutoriaL.Models.Trip>
@{
    ViewBag.Title = "Home Page";
}
@section scripts{
<script src="~/lib/angular/angular.min.js"></script>
<script src="~/lib/angular-route/angular-route.min.js"></script>
<script src="~/js/app-trips.js"></script>
<script src="~/js/tripsController.js"></script>
<script src="~/js/simpleControls.js"></script>
}
<div class="row" ng-app="app-trips">

    <div ng-view></div>

    <div class="col-md-6">
        <h1>Hi people!</h1>
        <p>This is going to be a site soon</p>
        <form>
            <div class="form-group">
                <label>
                    Date:
                </label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <label>
                    Location:
                </label>
                <input class="form-control" />
            </div>
            <div>
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var trip in Model)
            {
                <li>@trip.Name (@trip.Created.ToString())</li>

            }
        </ul>
    </div>
</div>